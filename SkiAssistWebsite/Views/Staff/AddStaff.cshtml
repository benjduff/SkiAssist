@using System.ComponentModel
@using System.Web.UI.WebControls
@model SkiAssistWebsite.ViewModels.AddStaffViewModel
@{
    ViewBag.Title = "AddStaff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <!-- Gaurdian Details-->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="header">
                        <div id="new">
                            <h4 class="title">Staff Details</h4>
                        </div>
                        <div class="content">

                            @using (Html.BeginForm("PostStaff", "Staff"))
                            {
                                <div class="row">
                                    <div class="col-md-6"> 
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Staff.FirstName)
                                            @Html.TextBoxFor(m => m.Staff.FirstName, new { @class = "form-control", placeholder = "First Name" })
                                            @Html.ValidationMessageFor(m => m.Staff.FirstName)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Staff.LastName)
                                            @Html.TextBoxFor(m => m.Staff.LastName, new { @class = "form-control", placeholder = "Last Name" })
                                            @Html.ValidationMessageFor(m => m.Staff.LastName)
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Staff.ContactNumber)
                                            @Html.TextBoxFor(m => m.Staff.ContactNumber, new { @class = "form-control", placeholder = "Contact Number" })
                                            @Html.ValidationMessageFor(m => m.Staff.ContactNumber)
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Staff.ContactEmail)
                                            @Html.TextBoxFor(m => m.Staff.ContactEmail, new { @class = "form-control", placeholder = "Email Address" })
                                            @Html.ValidationMessageFor(m => m.Staff.ContactEmail)
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Staff.StaffPassword)
                                            @Html.PasswordFor(m => m.Staff.StaffPassword, new { @class = "form-control", placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Staff.StaffPassword)
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Staff.RetypedPassword)
                                            @Html.PasswordFor(m => m.Staff.RetypedPassword, new { @class = "form-control", placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Staff.RetypedPassword)
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m=>m.Staff.Username)
                                            @Html.TextBoxFor(m=>m.Staff.Username, new { @class = "form-control", placeholder = "Username" })
                                            @Html.ValidationMessageFor(m=>m.Staff.Username)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Staff.RoleType)
                                            @Html.DropDownListFor(m => m.Staff.RoleType, new SelectList(Model.RoleTypes), "", new{@class = "form-control"})
                                            @Html.ValidationMessageFor(m => m.Staff.RoleType)
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info btn-fill pull-middle">Add New Staff</button>
                            }
                            <div class="clear-fix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

