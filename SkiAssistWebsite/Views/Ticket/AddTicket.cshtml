@using SkiAssistWebsite.Controllers
@model AddTicketViewModel

@{
    ViewBag.Title = "New Ticket";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <!-- Gaurdian Details-->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="header">
                        <div id="new">
                            <h4 class="title">Guardian Details</h4>
                        </div>
                        <div class="content">

                            @using (Html.BeginForm("PostTicket", "Ticket"))
                            {
                                <div class="row"> 
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.AddTicket.TicketNumber)
                                            @Html.TextBoxFor(m => m.AddTicket.TicketNumber, new { @class = "form-control", placeholder = "Ticket Number" })
                                            @Html.ValidationMessageFor(m => m.AddTicket.TicketNumber)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.AddTicket.TicketLessonsRemaining)
                                            @Html.TextBoxFor(m => m.AddTicket.TicketLessonsRemaining, new { @class = "form-control", placeholder = "Lessons Remaining" })
                                            @Html.ValidationMessageFor(m => m.AddTicket.TicketLessonsRemaining)
                                        </div>
                                    </div>
                                </div>
                                @Html.HiddenFor(m => m.StudentId)
                                <button type="submit" class="btn btn-info btn-fill pull-middle">Add New Ticket</button>
                            }
                            <div class="clear-fix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>